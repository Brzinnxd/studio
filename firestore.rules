rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the requesting user is the owner of the resource.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is an existing owner of the resource.
     */
    function isExistingOwner(userId) {
        return isSignedIn() && resource.data != null && request.auth.uid == userId;
    }

    /**
     * @description Checks if the requesting user is an administrator.
     */
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(userId) && request.auth.uid == userId;
      allow update: if isExistingOwner(userId) && request.auth.uid == userId;
      allow delete: if isExistingOwner(userId) && request.auth.uid == userId;
    }

    /**
     * @description Rules for products.
     * @path /products/{productId}
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

     /**
      * @description Rules for business transactions.
      * @path /business_transactions/{transactionId}
      */
    match /business_transactions/{transactionId} {
        allow get, list: if isAdmin();
        allow create: if isAdmin();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }

    /**
      * @description Rules for personal transactions.
      * @path /personal_transactions/{transactionId}
      */
    match /personal_transactions/{transactionId} {
        allow get, list: if isAdmin();
        allow create: if isAdmin();
        allow update: if isAdmin();
        allow delete: if isAdmin();
    }

    /**
     * @description Rules for customers.
     * @path /customers/{customerId}
     */
    match /customers/{customerId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if false;
      allow create: if isOwner(customerId) && request.auth.uid == customerId;
      allow update: if isExistingOwner(customerId) && request.auth.uid == customerId;
      allow delete: if isExistingOwner(customerId) && request.auth.uid == customerId;
    }

    /**
     * @description Rules for orders.
     * @path /customers/{customerId}/orders/{orderId}
     */
    match /customers/{customerId}/orders/{orderId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if isOwner(customerId) || isAdmin();
      allow create: if isOwner(customerId);
      allow update: if isExistingOwner(customerId) && get(/databases/$(database)/documents/customers/$(customerId)).data != null;
      allow delete: if isExistingOwner(customerId) && get(/databases/$(database)/documents/customers/$(customerId)).data != null;
    }

    /**
     * @description Rules for order items.
     * @path /customers/{customerId}/orders/{orderId}/order_items/{orderItemId}
     */
    match /customers/{customerId}/orders/{orderId}/order_items/{orderItemId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if isOwner(customerId) || isAdmin();
      allow create: if isOwner(customerId);
      allow update: if isExistingOwner(customerId) && get(/databases/$(database)/documents/customers/$(customerId)/orders/$(orderId)).data != null;
      allow delete: if isExistingOwner(customerId) && get(/databases/$(database)/documents/customers/$(customerId)/orders/$(orderId)).data != null;
    }

    /**
     * @description Rules for trending flavors.
     * @path /trending_flavors/{trendingFlavorId}
     */
    match /trending_flavors/{trendingFlavorId} {
      allow get, list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}