/**
 * @fileOverview Firestore Security Rules for Angel's Sweets Emporium.
 *
 * Core Philosophy:
 * This ruleset employs a hybrid security model. Products, trending flavors, and financial transactions are publicly readable but not writable. Customer profiles and their orders are strictly user-owned, with access controlled via path-based authorization.
 *
 * Data Structure:
 * - /products/{productId}: Public product catalog.
 * - /customers/{customerId}: Customer profiles, where customerId is the user's UID.
 * - /customers/{customerId}/orders/{orderId}: Orders belonging to a specific customer.
 * - /trending_flavors/{trendingFlavorId}: Public trending flavor data.
 * - /business_transactions/{transactionId}: Business transactions, publicly readable.
 * - /personal_transactions/{transactionId}: Personal transactions, publicly readable.
 *
 * Key Security Decisions:
 * - Public read access for products, trending flavors, and financial transactions to allow for easy display and analysis.
 * - Strict user-ownership for customer profiles and orders. A customer can only access their own profile and orders.
 * - Denies listing all customer documents for privacy.
 *
 * Denormalization for Authorization:
 *  - Orders are stored as a subcollection of `/customers/{customerId}/orders/{orderId}`.
 *  - Security rules directly verify `request.auth.uid == customerId` without needing to `get()` the customer document.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read product information, but prohibits writing.
     * @path /databases/{database}/documents/products/{productId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Allows public read access to product information.
     */
    match /products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Manages customer profile access. Only the authenticated user can create, read, update, or delete their own profile.
     * @path /databases/{database}/documents/customers/{customerId}
     * @allow (create): if isSignedIn() && isOwner(customerId)
     * @allow (get, update, delete): if isSignedIn() && isExistingOwner(customerId)
     * @deny (list): if false
     * @deny (create, update, delete): if !isSignedIn() || !isOwner(customerId)
     * @principle Enforces strict user-ownership for customer profiles.
     */
    match /customers/{customerId} {
      allow create: if isSignedIn() && isOwner(customerId);
      allow get, update, delete: if isSignedIn() && isExistingOwner(customerId);
      allow list: if false; // Prevent listing all customers

      /**
       * @description Manages order access. Only the customer who owns the order can create, read, update, or delete it.
       * @path /databases/{database}/documents/customers/{customerId}/orders/{orderId}
       * @allow (create): if isSignedIn() && isOwner(customerId)
       * @allow (get, list, update, delete): if isSignedIn() && isExistingOwner(customerId)
       * @deny (create, update, delete): if !isSignedIn() || !isOwner(customerId)
       * @principle Enforces strict user-ownership for orders using path-based authorization.
       */
      match /orders/{orderId} {
        allow create: if isSignedIn() && isOwner(customerId);
        allow get, list, update, delete: if isSignedIn() && isExistingOwner(customerId);
      }
    }

    /**
     * @description Manages order item access. Only the customer who owns the order can create, read, update, or delete its items.
     * @path /databases/{database}/documents/customers/{customerId}/orders/{orderId}/order_items/{orderItemId}
     * @allow (create): if isSignedIn() && isOwner(customerId)
     * @allow (get, list, update, delete): if isSignedIn() && isExistingOwner(customerId)
     * @deny (create, update, delete): if !isSignedIn() || !isOwner(customerId)
     * @principle Enforces strict user-ownership for order items via path-based authorization.
     */
    match /customers/{customerId}/orders/{orderId}/order_items/{orderItemId} {
      allow create: if isSignedIn() && isOwner(customerId);
      allow get, list, update, delete: if isSignedIn() && isExistingOwner(customerId);
    }

    /**
     * @description Allows anyone to read trending flavor data, but prohibits writing.
     * @path /databases/{database}/documents/trending_flavors/{trendingFlavorId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Allows public read access to trending flavor data.
     */
    match /trending_flavors/{trendingFlavorId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read business transaction data, but prohibits writing.
     * @path /databases/{database}/documents/business_transactions/{transactionId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Allows public read access to business transaction data.
     */
    match /business_transactions/{transactionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows anyone to read personal transaction data, but prohibits writing.
     * @path /databases/{database}/documents/personal_transactions/{transactionId}
     * @allow (get, list): if true
     * @deny (create, update, delete): if false
     * @principle Allows public read access to personal transaction data.
     */
    match /personal_transactions/{transactionId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    // ---- Helper Functions ----

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user's UID matches the provided userId.
     * @param {string} userId The user ID to compare against the authenticated user's UID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of the resource and the resource exists.
     * @param {string} userId The user ID to compare against the authenticated user's UID.
     * @return {boolean} True if the user is the existing owner, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
  }
}